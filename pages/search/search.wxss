.search{
    padding: 8px;
    background: rgb(244, 244, 243);
    height: 100%
}
.search .search-top{
    padding: 8px;
}

.search-top .search-input, input{
    border-radius: 8px;
}

.search-input .search-cancel-btn{
    opacity: 0;
    transform: scale(0.5);
    transition: all .2s ease-out;
}

.search-input .search-cancel-btn-active{
    opacity: 1;
    transform: scale(1);
}

.sc-btn{
    height: 32px;
}

.search .search-container{
    margin-top: 32rpx;
    padding: 8px;
}

.search-history{
    margin-top: 16px;
}

.search-history .search-history-list{
    width: 100%;
    margin-top: 8px;
    flex-wrap: wrap;
    align-content:flex-start;
}

.search-history-list .search-history-item{
    background-color: #EFF2F4;
    padding: 6px 16px;
    text-align: center;
    margin-right: 16px;
    margin-bottom: 16px;
    border-radius: 2px;
}

.search-history-list .search-history-item-hover{
    background-color: #E0E2E4;
}

.search-history-item text{
    font-size: 26rpx;
    letter-spacing: 2rpx;
    font-weight: 500
}

