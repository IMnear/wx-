<!--pages/map/map.wxml-->
<view>
<map class='map' id="myMap" show-location />
<button class='btn' type="primary" bindtap="getCenterLocation">获取位置</button>
<button class='btn' type="primary" bindtap="moveToLocation">移动位置</button>
<button class='btn' type="primary" bindtap="translateMarker">移动标注</button>
<button type="primary" bindtap="includePoints">缩放视野展示所有经纬度</button>
</view>
